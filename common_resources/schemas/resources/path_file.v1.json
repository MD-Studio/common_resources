{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "path_file",
    "description": "Object describing a file",
    "type": "object",
    "properties": {
	"content": {
	    "type": "string",
	    "description": "actual content of the file"
	},
	"path": {
	    "type": "string",
	    "description": "file path"
	},
	"extension": {
	    "type": "string",
	    "description": "extension of the file"
	},
	"encoding": {
	    "type": "string",
	    "description": "Encoding use for the string",
	    "default": "utf8"
	}
    },
    "required": ["content", "extension", "path"]
}
